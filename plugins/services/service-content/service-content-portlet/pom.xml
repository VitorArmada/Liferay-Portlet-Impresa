	<modelVersion>4.0.0</modelVersion>
	<artifactId>service-content-portlet</artifactId>
	<packaging>war</packaging>
	<name>Service :: Content Impl</name>
	<version>1.0-SNAPSHOT</version>
	
	<properties>
		<jenkins.build.number>${env.BUILD_NUMBER}</jenkins.build.number>
	</properties>

	<profiles>
		<profile>
			<id>local</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
                <!--<service.content.url>http://iapi-as1:8280/services/ContentServiceProxy?wsdl</service.content.url>-->
<!-- 				<service.content.url>http://iapi.impresa.pt/content/soap?wsdl</service.content.url> -->
				<!--<service.content.url>http://spoc:9090/content/soap?wsdl</service.content.url>-->
				<service.content.url>https://services.impresa.pt/ExameInformatica/Content/Request?wsdl=1&amp;</service.content.url>
				<service.newsletter.url>http://iapi.impresa.pt/newsletter/soap?wsdl</service.newsletter.url>
<!-- 				<service.newsletter.url>http://jurassicpark.rnd.impresa.pt:8080/newsletter/soap?wsdl</service.newsletter.url> -->
			</properties>
		</profile>
		<profile>
			<id>dev</id>
			<properties>
				<!--<service.content.url>http://iapi.impresa.pt/content/soap?wsdl</service.content.url>-->
				<!--<service.content.url>http://iapi.impresa.pt/content/soap?wsdl</service.content.url>-->
                <service.content.url>http://spoc:9090/content/soap?wsdl</service.content.url>
                <!--<service.content.url>https://services.impresa.pt/ExameInformatica/Content/Request?wsdl=1&amp;</service.content.url>-->
				<service.newsletter.url>http://iapi.impresa.pt/newsletter/soap?wsdl</service.newsletter.url>
			</properties>
		</profile>
		<profile>
			<id>prod</id>
			<properties>
				<!--<service.content.url>http://iapi.impresa.pt/content/soap?wsdl</service.content.url>-->
				<!--<service.content.url>http://iapi-as1:8280/services/ContentServiceProxy?wsdl</service.content.url>-->
				<!--<service.content.url>http://localhost:9090/content/soap?wsdl</service.content.url>-->
                <!--<service.content.url>http://esb.iapi.impresa.pt:8280/services/ContentServiceProxy?wsdl</service.content.url>-->
                <service.content.url>http://services.impresa.pt/ExameInformatica/Content/Request?wsdl=1&amp;</service.content.url>
				<service.newsletter.url>http://iapi.impresa.pt/newsletter/soap?wsdl</service.newsletter.url>
<!-- 				<service.newsletter.url>http://jurassicpark.rnd.impresa.pt:8080/newsletter/soap?wsdl</service.newsletter.url> -->
				
			</properties>
		</profile>
	</profiles>

	<build>
		<finalName>service-content-portlet-1.0-SNAPSHOT</finalName>
		<plugins>
			<plugin>
				<groupId>com.liferay.maven.plugins</groupId>
				<artifactId>liferay-maven-plugin</artifactId>
				<version>${liferay.version}</version>
				<configuration>
					<pluginType>portlet</pluginType>
					<apiBaseDir>${basedir}/../service-content-portlet-service</apiBaseDir>
					<serviceFileName>${basedir}/src/main/webapp/WEB-INF/service.xml</serviceFileName>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.5</version>
				<configuration>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>pt.impresa.liferay</groupId>
			<artifactId>service-content-portlet-service</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.liferay.portal</groupId>
			<artifactId>portal-service</artifactId>
			<version>${liferay.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.liferay.portal</groupId>
			<artifactId>util-bridges</artifactId>
			<version>${liferay.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.liferay.portal</groupId>
			<artifactId>util-taglib</artifactId>
			<version>${liferay.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.liferay.portal</groupId>
			<artifactId>util-java</artifactId>
			<version>${liferay.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>javax.portlet</groupId>
			<artifactId>portlet-api</artifactId>
			<version>2.0</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>servlet-api</artifactId>
			<version>2.5</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>javax.servlet.jsp</groupId>
			<artifactId>jsp-api</artifactId>
			<version>2.0</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>pt.impresa</groupId>
			<artifactId>application-common</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>pt.impresa.liferay</groupId>
			<artifactId>liferay-common</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
        <dependency>
            <groupId>pt.impresa.service</groupId>
            <artifactId>service-content-client</artifactId>
            <version>3.0-SNAPSHOT</version>
        </dependency>
        <dependency>
