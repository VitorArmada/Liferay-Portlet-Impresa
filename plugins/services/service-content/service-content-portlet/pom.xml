            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>pt.impresa.apis.3rdparty</groupId>
            <artifactId>sapo-apis</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
	</dependencies>
</project>
