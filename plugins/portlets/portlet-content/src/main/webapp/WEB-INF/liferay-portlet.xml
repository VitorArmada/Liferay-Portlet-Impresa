<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.1.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_1_0.dtd">

<liferay-portlet-app>
	
	<!-- List view -->
	<portlet>
		<portlet-name>list-portlet</portlet-name>
		<icon>/icon.png</icon>
        <configuration-action-class>pt.impresa.liferay.portlet.content.config.ContentPortletConfigurationAction</configuration-action-class>
        <show-portlet-access-denied>false</show-portlet-access-denied>
        <show-portlet-inactive>false</show-portlet-inactive>
        <instanceable>true</instanceable>
	</portlet>
    
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>
